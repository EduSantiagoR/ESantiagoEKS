@model ML.Producto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Productos</h2>
<hr />
<div>
    <a class="btn btn-success" href="@Url.Action("Form","Producto")"><i class="fa-regular fa-square-plus"></i>  Agregar</a>
</div>
<hr />
<div>
    @if (Model.Productos != null)
    {
        if (Model.Productos.Count > 0)
        {
            <table class="table table-dark table-hover text-center">
                <thead>
                    <tr>
                        <th>Editar</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Marca</th>
                        <th>Costo</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(ML.Producto producto in Model.Productos)
                    {
                        <tr>
                            <td><a class="btn btn-warning" href="@Url.Action("Form", "Producto", new {idProducto = producto.IdProducto})"><i class="fa-solid fa-file-pen"></i></a></td>
                            <td>@producto.Nombre</td>
                            <td>@producto.Descripcion</td>
                            <td>@producto.Marca.Nombre</td>
                            <td>$ @producto.Costo</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete","Producto", new {idProducto = producto.IdProducto})"><i class="fa-solid fa-delete-left"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div role="alert" class="alert alert-warning">
                No hay productos registrados.
            </div>
        }
    }
</div>